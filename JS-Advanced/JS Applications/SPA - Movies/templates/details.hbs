{{> header}}

<div class="container">
    <div class="row bg-light text-dark">
        <h1>Movie title: {{movie.title}}</h1>

        <div class="col-md-8">
            <img class="img-thumbnail" src="{{movie.imageUrl}}" alt="{{movie.title}}">
        </div>
        <div class="col-md-4 text-center">
            <h3 class="my-3 ">Movie Description</h3>
            <p>{{movie.description}}</p>
            <a class="btn btn-danger" href="/delete/{{movie.id}}">Delete</a>
            <a class="btn btn-warning" href="/edit/{{movie.id}}">Edit</a>
            <a class="btn btn-primary" href="">Like</a>
            <span class="enrolled-span">Liked {{movie.likes}}</span>
        </div>
    </div>
</div>

{{> footer}}