<main>
    <form action="/editCat/{{cat._id}}" method="POST" class="cat-form">
        <h2>Edit Cat</h2>
        <label for="name">Name</label>
        <input name="name" type="text" id="name" value="{{cat.name}}">
        <label for="description">Description</label>
        <textarea name="description" id="description">{{cat.description}}</textarea>
        <label for="image">ImageUrl</label>
        <input type="text" id="image" name="imageUrl" value="{{cat.imageUrl}}"> 
        <label for="group">Breed</label>
        <select name="breed" id="group">
            {{#each breeds}}
            <option value="{{this.breed}}">{{this.breed}}</option>
            {{/each}}
        </select>
        <button>Edit Cat</button>
    </form>
</main>

